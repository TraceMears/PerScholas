package array_grouping;

import java.util.ArrayList;
import java.util.Arrays;

public class ArrayGroup {
	
	public static void arrGroup(int[] arr, int subarraySize) {
		int numOfArrays = (int) Math.ceil( ((double) (arr.length))/ (double) subarraySize);
		
		ArrayList<Integer> array1 = new ArrayList<Integer>();
		for(int a: arr) {
			array1.add(a);
		}
		
//		ArrayList<Object> array2 = new ArrayList<Object>();
		
		System.out.println("{");
		
		for(int x=1; x<=numOfArrays; x++) {
			System.out.println("[");	
			for(int i=0; i<subarraySize; i++) {
				int pick = (int) (Math.random()*array1.size());
				System.out.println(array1.get(pick));
				array1.remove(pick);
			}
			if(x==numOfArrays) {
				System.out.println("]");
			}
			else {
				System.out.println("], ");
			}
		}
		
		
		
		System.out.println("}");
		
		
	}
}
