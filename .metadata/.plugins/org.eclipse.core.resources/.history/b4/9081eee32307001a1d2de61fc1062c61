package linkedlist;

public class SinglyLinkedList {
	Node head;
	Node tail;
	int size;
		
	public SinglyLinkedList(Node node) {
		this.head = node;
		this.tail = node;
		this.size = 1;
	}
	public Node getHead() {
		return head;
	}
	public void setHead(Node head) {
		this.head = head;
	}
	public Node getTail() {
		return tail;
	}
	public void setTail(Node tail) {
		this.tail = tail;
	}
	
	public void add(Node n) {
		tail.setNext(n);
		n = tail;
		size++;
	}
	
	public void insertAt(Node n, int index) {
		if(this.size<index) {
			System.out.println("Invalid index, out of bounds for Linked List");
			return;
		}
		if(this.size==index) {
			this.add(n);
		}
		
		Node place = head;
		for(int i=0; i<index-1; i++) {
			place = place.getNext();
		}
		Node temp = place;
		temp=place.getNext();
		place.setNext(n);
		n.setNext(temp);		
	}
	
	public void printList() {
		Node pointer = this.getHead();
		while(pointer.getNext() != null) {
			pointer.printNode();
			pointer = pointer.getNext();
		}
		pointer.printNode();
	}
}
