package star_graph;

import java.util.Arrays;
import java.util.Collections;

public class ArrayHandler {
	
	public static void printStarGraph(int[] arr) {
		int level = arr.length;
		for(int i=0; i<Collections.max(Arrays.asList(arr)); i++) {
			for(int j=0; j<arr.length; j++) {
				if(arr[j] >= level) {
					System.out.print("*\t");
				}
				else {
					System.out.print(" \t");
				}
			}
			System.out.println();
			level--;
		}
	}
	
	
}
