package com.perscholas.selenium_cucumber_template.step_definitions;

import cucumber.api.PendingException;
import cucumber.api.java.en.Given;
import cucumber.api.java.en.When;
import cucumber.api.java.en.Then;
import cucumber.api.junit.Cucumber;
import org.junit.runner.RunWith;
import org.openqa.selenium.WebDriver;

@RunWith(Cucumber.class)
public class PopularSessionStepDef {

	private WebDriver driver;
	
    @Given("^the user navigates to the online store$")
    public void the_user_navigates_to_the_online_store() throws Throwable {
        throw new PendingException();
    }

    @When("^the user clicks on an item$")
    public void the_user_clicks_on_an_item() throws Throwable {
        throw new PendingException();
    }

    @When("^you add an item to cart$")
    public void you_add_an_item_to_cart() throws Throwable {
        throw new PendingException();
    }

    @When("^you add a second item to cart$")
    public void you_add_a_second_item_to_cart() throws Throwable {
        throw new PendingException();
    }

    @Then("^the page for that item should open$")
    public void the_page_for_that_item_should_open() throws Throwable {
        throw new PendingException();
    }

    @Then("^the cart should now have that item$")
    public void the_cart_should_now_have_that_item() throws Throwable {
        throw new PendingException();
    }

    @Then("^the cart should have both items$")
    public void the_cart_should_have_both_items() throws Throwable {
        throw new PendingException();
    }

}